<Page x:Class="master_pol.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:master_pol.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">
    <Grid Background="White">
        <Grid Height="60" Margin="20 10 20 10" VerticalAlignment="Top">
            <Image Height="40" Source="/Images/m.png" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <Label x:Name="List" Content="Партнёры" FontFamily="Segoe UI" FontWeight="SemiBold" FontSize="20" Margin="50 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <Button x:Name="BtnBack" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="100" Height="30" Margin="0 0 20 10" Background="#67BA80" Content="Назад" FontFamily="Segoe UI" FontSize="15" Foreground="White" BorderBrush="Black" BorderThickness="2" Click="BtnBack_Click" Visibility="Hidden"/>
        </Grid>
        <Border Margin="20 80 20 50" BorderThickness="2" BorderBrush="Black">
            <ScrollViewer>
                <StackPanel x:Name="parent"/>
            </ScrollViewer>
        </Border>
        <Button x:Name="Add" Click="Add_Click" Background="#67BA80" Content="Добавить" FontSize="15" FontFamily="Segoe UI" BorderBrush="Black" BorderThickness="2" Foreground="White" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="100" Height="30" Margin="0 0 20 10"/>
    </Grid>
</Page>
