<Page x:Class="master_pol.Pages.Add.Partners"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:master_pol.Pages.Add"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Partners">
    <Grid Background="White">
        <Grid Height="60" Margin="20 10 20 10" VerticalAlignment="Top">
            <Image Height="40" Source="/Images/m.png" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <Label Content="Редактирование партнёра" FontFamily="Segoe UI" FontWeight="SemiBold" FontSize="20" Margin="50 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <Button x:Name="Back" Click="Back_Click" Background="#67BA80" Content="Назад" FontSize="15" FontFamily="Segoe UI" BorderBrush="Black" BorderThickness="2" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right" Width="100" Height="30" Margin="0 0 0 0"/>
        </Grid>
        <Grid VerticalAlignment="Top" Margin="40 70 40 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Наименование" FontFamily="Segoe UI" FontSize="15" Margin="0 0 5 0" VerticalAlignment="Top" />
            <TextBox x:Name="Name" VerticalAlignment="Top" Margin="0 30 5 0" Height="25" FontFamily="Segoe UI" />

            <Label Content="Тип" FontFamily="Segoe UI" FontSize="15" Margin="5 0 0 0" VerticalAlignment="Top" Grid.Column="1" />
            <ComboBox x:Name="Type" VerticalAlignment="Top" Margin="5 30 0 0" Height="25" FontFamily="Segoe UI" Grid.Column="1" />

            <Label Content="Директор" FontFamily="Segoe UI" FontSize="15" Margin="0 50 5 0" VerticalAlignment="Top" />
            <TextBox x:Name="Director" VerticalAlignment="Top" Margin="0 80 5 0" Height="25" FontFamily="Segoe UI" />

            <Label Content="Рейтинг (1-10)" FontFamily="Segoe UI" FontSize="15" Margin="5 50 0 0" VerticalAlignment="Top" Grid.Column="1" />
            <ComboBox x:Name="Rating" VerticalAlignment="Top" Margin="5 80 0 0" Height="25" FontFamily="Segoe UI" Grid.Column="1" />
        </Grid>
        <Grid VerticalAlignment="Top" Margin="40 180 40 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Адрес (с индексом)" FontFamily="Segoe UI" FontSize="15" Margin="0 0 5 0" VerticalAlignment="Top" />
            <TextBox x:Name="Address" VerticalAlignment="Top" Margin="0 30 5 0" Height="25" FontFamily="Segoe UI" />

            <Label Content="ИНН (1234567890)" FontFamily="Segoe UI" FontSize="15" Margin="5 0 0 0" VerticalAlignment="Top" Grid.Column="1" />
            <TextBox x:Name="Inn" VerticalAlignment="Top" Margin="5 30 0 0" Height="25" FontFamily="Segoe UI" Grid.Column="1" />

            <Label Content="Почта (company@gmail.com)" FontFamily="Segoe UI" FontSize="15" Margin="0 50 5 0" VerticalAlignment="Top" />
            <TextBox x:Name="Email" VerticalAlignment="Top" Margin="0 80 5 0" Height="25" FontFamily="Segoe UI" />

            <Label Content="Телефон (89068884412)" FontFamily="Segoe UI" FontSize="15" Margin="5 50 0 0" VerticalAlignment="Top" Grid.Column="1" />
            <TextBox x:Name="Phone" VerticalAlignment="Top" Margin="5 80 0 0" Height="25" FontFamily="Segoe UI" Grid.Column="1" />
            
            <Label Content="Места продаж" FontFamily="Segoe UI" FontSize="15" Margin="0 100 5 0" VerticalAlignment="Top" />
            <TextBox x:Name="Places" VerticalAlignment="Top" Margin="0 130 5 0" Height="25" FontFamily="Segoe UI" />
        </Grid>
        
        <Button x:Name="BtnAdd" Click="BtnAdd_Click" Background="#67BA80" Content="Добавить" FontSize="15" FontFamily="Segoe UI" BorderBrush="Black" BorderThickness="2" Foreground="White" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="100" Height="30" Margin="0 0 20 10"/>
    </Grid>
</Page>
