<UserControl x:Class="master_pol.Elements.History_item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:master_pol.Elements"
             mc:Ignorable="d" >
    <Grid Margin="20 20 20 10">
        <Border BorderThickness="2" BorderBrush="Black">
            <Grid Background="#ffffff">
                <Label x:Name="Name" Content="Наименование продукции" FontFamily="Segoe UI" FontWeight="SemiBold" FontSize="20" Margin="20 10 20 0" VerticalAlignment="Top" HorizontalAlignment="Left" />
                <Label x:Name="Count" Content="Количество: 44" FontFamily="Segoe UI" FontSize="16" Margin="20 35 0 0" VerticalAlignment="Top" HorizontalAlignment="Left" />
                <Label x:Name="Date" Content="Дата продажи: 20.01.2005" FontFamily="Segoe UI" FontSize="16" Margin="20 55 0 0" VerticalAlignment="Top" HorizontalAlignment="Left" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
