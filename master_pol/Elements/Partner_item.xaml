<UserControl x:Class="master_pol.Elements.Partner_item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:master_pol.Elements"
             mc:Ignorable="d" >
    <Grid Margin="20 20 20 10">
        <Border BorderThickness="2" BorderBrush="Black">
            <Grid MouseDown="Grid_MouseDown" Background="#ffffff">
                <Label x:Name="Name" Content="Тип | Наименование партнёра" FontFamily="Segoe UI" FontWeight="SemiBold" FontSize="20" Margin="20 10 90 0" VerticalAlignment="Top" HorizontalAlignment="Left" />
                <Label x:Name="Discount" Content="10%" FontFamily="Segoe UI" FontWeight="SemiBold" FontSize="20" Margin="20 10 50 0" VerticalAlignment="Top" HorizontalAlignment="Right" />
                <Label x:Name="Director" Content="Директор" FontFamily="Segoe UI" FontSize="16" Margin="20 35 0 0" VerticalAlignment="Top" HorizontalAlignment="Left" />
                <Label x:Name="Phone" Content="+7 223 322 22 32" FontFamily="Segoe UI" FontSize="16" Margin="20 55 0 0" VerticalAlignment="Top" HorizontalAlignment="Left" />
                <Label x:Name="Rating" Content="Рейтинг: 10" FontFamily="Segoe UI" FontSize="16" Margin="20 75 0 10" VerticalAlignment="Top" HorizontalAlignment="Left" />
            </Grid>
        </Border>
        <Button VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="100" Height="30" Margin="0 0 10 10" Background="#67BA80" Content="История" FontFamily="Segoe UI" FontSize="15" Foreground="White" BorderBrush="Black" BorderThickness="2" Click="BtnHist_Click" />
    </Grid>
</UserControl>
